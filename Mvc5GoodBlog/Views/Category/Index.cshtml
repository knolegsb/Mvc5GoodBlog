@model IEnumerable<Mvc5GoodBlog.Post>

@{
    ViewBag.Title = "Blog | GoodBlog.com";
}

<div class="page-header">
    <h1>Blog</h1>
    <p class="lead">Welcome on my blog</p>
</div>

@foreach (var item in Model)
{
    @Html.DisplayFor(modelItem => item, "PostPreview")
}

@{ 
    Html.RenderAction("Pager", new { id = ViewBag.Slug });
}
