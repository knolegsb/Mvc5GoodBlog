@model Mvc5GoodBlog.ViewModels.SideBarModel

<h4>Categories</h4>
<div class="list-group">
    @foreach (var item in Model.Categories)
    {
        <a href="@Url.Action("Index", "Category")/@item.Slug" class="list-group-item">
            <span class="badge">@item.Posts.Count()</span>
            @item.Name
        </a>
    }
</div>

<h4>Last posts</h4>
<div class="list-group">
    @foreach (var item in Model.Posts)
    {
        <a href="@Url.Content("~")@item.Slug" class="list-group-item">
            @item.Name
        </a>
    }
</div>
